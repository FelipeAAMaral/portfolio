
---
import MainLayout from '../layouts/MainLayout.astro';
import HeroSection from '../components/home/HeroSection';
import IntroSection from '../components/home/IntroSection';
import FeaturedWorkSection from '../components/home/FeaturedWorkSection';
import MediumPostsSection from '../components/home/MediumPostsSection';
import { useTranslations } from '../utils/useTranslations';

// Get the appropriate translation function
const lang = Astro.cookies.get('language')?.value || 'en';
const t = useTranslations(lang as 'en' | 'pt');
---

<MainLayout title={`Felipe Amaral | ${t('hero.intro')}`}>
  <!-- Hero Section -->
  <HeroSection client:load />

  <!-- Brief Introduction -->
  <IntroSection client:load />

  <!-- Featured Work Section -->
  <FeaturedWorkSection client:load />

  <!-- Medium Blog Posts -->
  <MediumPostsSection client:load />
</MainLayout>
