
---
import MainLayout from '../layouts/MainLayout.astro';
import { useTranslations } from '../utils/useTranslations';
import { getCollection } from 'astro:content';

// Get all blog posts
const blogPosts = await getCollection('blog');
const t = useTranslations('en'); // Default to English, client components will handle language switching
---

<MainLayout title={`Blog | ${t('nav.blog')}`}>
  <div class="container py-16 animate-fade-in">
    <h1 class="text-4xl font-bold mb-8">Blog</h1>
    
    <p class="text-lg mb-12">
      {t('blog.languageIntro')}
    </p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {blogPosts.map((post) => (
        <article class="border rounded-lg overflow-hidden hover:shadow-md transition-shadow">
          <div class="aspect-[16/9] overflow-hidden">
            <img 
              src={post.data.image || "https://source.unsplash.com/random/800x600/?writing"} 
              alt={post.data.title} 
              class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
            />
          </div>
          <div class="p-6">
            <p class="text-sm text-muted-foreground mb-2">{new Date(post.data.date).toLocaleDateString()}</p>
            <h2 class="text-xl font-semibold mb-3">{post.data.title}</h2>
            <p class="text-muted-foreground mb-4">{post.data.excerpt}</p>
            <a 
              href={`/blog/${post.slug}`} 
              class="text-primary hover:underline inline-flex items-center"
            >
              {t('blog.readMore')}
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <p class="text-muted-foreground mb-8">
        {t('blog.moreArticles')}
      </p>
      
      <div class="flex justify-center">
        <a 
          href="https://medium.com" 
          target="_blank" 
          rel="noopener noreferrer" 
          class="bg-secondary hover:bg-secondary/80 text-foreground px-6 py-3 rounded-lg transition"
        >
          {t('blog.checkMedium')}
        </a>
      </div>
    </div>
  </div>
</MainLayout>
