
---
import MainLayout from '../layouts/MainLayout.astro';
import { useTranslations } from '../utils/useTranslations';

// Get the appropriate translation function
const lang = Astro.cookies.get('language')?.value || 'en';
const t = useTranslations(lang as 'en' | 'pt');
---

<MainLayout title={`${t('mentorship.title')} | Felipe Amaral`}>
  <div class="container py-16 animate-fade-in">
    <h1 class="text-4xl font-bold mb-8">{t('mentorship.title')}</h1>
    
    <div class="grid md:grid-cols-2 gap-12 mb-16">
      <div>
        <p class="text-xl mb-6">{t('mentorship.intro')}</p>
        <p class="mb-6">{t('mentorship.passion')}</p>
        <p class="mb-6">{t('mentorship.experience')}</p>
        <p>{t('mentorship.approach')}</p>
      </div>
      
      <div class="relative">
        <div class="absolute -inset-1 rounded-lg bg-gradient-to-br from-indigo-500/20 to-indigo-600/30 blur"></div>
        <div class="relative aspect-video overflow-hidden rounded-lg border bg-card">
          <img 
            src="/placeholder.svg" 
            alt="Mentorship" 
            class="h-full w-full object-cover"
          />
        </div>
      </div>
    </div>
    
    <div class="mb-16">
      <h2 class="text-2xl font-semibold mb-6">{t('mentorship.journey')}</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Timeline elements -->
        <div class="p-6 border rounded-lg bg-card hover:shadow-md transition-all">
          <div class="text-primary font-bold mb-2">2013 - 2016</div>
          <h3 class="text-xl font-medium mb-2">Software Engineer</h3>
          <p>Building the technical foundation and understanding product development from the code perspective.</p>
        </div>
        
        <div class="p-6 border rounded-lg bg-card hover:shadow-md transition-all">
          <div class="text-primary font-bold mb-2">2016 - 2020</div>
          <h3 class="text-xl font-medium mb-2">Product Manager</h3>
          <p>Learning to balance user needs with business goals and technical constraints.</p>
        </div>
        
        <div class="p-6 border rounded-lg bg-card hover:shadow-md transition-all">
          <div class="text-primary font-bold mb-2">2020 - Present</div>
          <h3 class="text-xl font-medium mb-2">Head of Product</h3>
          <p>Leading product teams and developing a strategic vision for HRTech solutions.</p>
        </div>
      </div>
    </div>
    
    <div class="mb-16">
      <h2 class="text-2xl font-semibold mb-6">{t('mentorship.growing')}</h2>
      <div class="space-y-6">
        <p>{t('mentorship.advice1')}</p>
        <p>{t('mentorship.advice2')}</p>
      </div>
    </div>
    
    <div class="bg-muted/20 rounded-lg p-8 border">
      <h2 class="text-2xl font-semibold mb-4">{t('mentorship.interested')}</h2>
      <p class="mb-6">{t('mentorship.offer')}</p>
      <p class="mb-6">{t('mentorship.fillForm')}</p>
      <a href="/contact" class="inline-flex bg-primary text-primary-foreground hover:bg-primary/90 px-6 py-3 rounded-lg transition-colors">
        {t('contact.title')}
      </a>
    </div>
  </div>
</MainLayout>
