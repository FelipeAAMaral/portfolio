
---
import MainLayout from '../layouts/MainLayout.astro';
import AboutHero from '../components/about/AboutHero';
import AboutMe from '../components/about/AboutMe';
import ProductPhilosophy from '../components/about/ProductPhilosophy';
import ProjectsBuilt from '../components/about/ProjectsBuilt';
import CpoPath from '../components/about/CpoPath';
import CareerJourney from '../components/about/CareerJourney';
import SkillsToolbox from '../components/about/SkillsToolbox';
import BuildTogether from '../components/about/BuildTogether';
---

<MainLayout title="About | Felipe Amaral">
  <div class="container py-16 animate-fade-in">
    <!-- Professional Overview Section -->
    <AboutHero client:load />
    
    <!-- More About Me Section -->
    <AboutMe client:load />
    
    <!-- Product Philosophy Section -->
    <ProductPhilosophy client:load />
    
    <!-- Projects I've Built Section -->
    <ProjectsBuilt client:load />
    
    <!-- CPO Path Section -->
    <CpoPath client:load />
    
    <!-- Career Journey Section -->
    <CareerJourney client:load />
    
    <!-- Skills & Tools Section -->
    <SkillsToolbox client:load />
    
    <!-- Let's Build Something Section -->
    <BuildTogether client:load />
  </div>
</MainLayout>
