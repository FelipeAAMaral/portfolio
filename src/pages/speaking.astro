
---
import MainLayout from '../layouts/MainLayout.astro';
import { useTranslations } from '../utils/useTranslations';

// Get the appropriate translation function
const lang = Astro.cookies.get('language')?.value || 'en';
const t = useTranslations(lang as 'en' | 'pt');
---

<MainLayout title={`${t('speaking.title')} | Felipe Amaral`}>
  <div class="container py-16 animate-fade-in">
    <h1 class="text-4xl font-bold mb-8">{t('speaking.title')}</h1>
    
    <div class="mb-10">
      <p class="text-xl mb-8">{t('speaking.intro')}</p>
      
      <h2 class="text-2xl font-semibold mb-6">{t('speaking.events')}</h2>
      
      <div class="space-y-6">
        <!-- Event cards would go here -->
        <div class="border rounded-lg p-6 bg-card hover:shadow-md transition-all">
          <h3 class="text-xl font-medium mb-2">Web Development Trends 2025</h3>
          <p class="text-muted-foreground mb-4">TechConf Brazil, SÃ£o Paulo - June 2025</p>
          <p>An exploration of upcoming web technologies and methodologies that will shape the development landscape in the coming year.</p>
        </div>
        
        <div class="border rounded-lg p-6 bg-card hover:shadow-md transition-all">
          <h3 class="text-xl font-medium mb-2">Leading Product Teams in HRTech</h3>
          <p class="text-muted-foreground mb-4">Product Summit, Rio de Janeiro - March 2025</p>
          <p>Insights and strategies for effective leadership in the evolving HRTech product space.</p>
        </div>
      </div>
    </div>
    
    <div class="mt-16 bg-muted/20 rounded-lg p-8 border">
      <h2 class="text-2xl font-semibold mb-4">{t('speaking.interested')}</h2>
      <p class="mb-6">{t('speaking.available')}</p>
      <a href="/contact" class="inline-flex bg-primary text-primary-foreground hover:bg-primary/90 px-6 py-3 rounded-lg transition-colors">
        {t('contact.title')}
      </a>
    </div>
  </div>
</MainLayout>
