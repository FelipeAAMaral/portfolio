
---
import MainLayout from '../layouts/MainLayout.astro';
import { useTranslations } from '../utils/useTranslations';
import ContactForm from '../components/ContactForm';

// Get the appropriate translation function
const lang = Astro.cookies.get('language')?.value || 'en';
const t = useTranslations(lang as 'en' | 'pt');
---

<MainLayout title={`${t('contact.title')} | Felipe Amaral`}>
  <div class="container py-16 animate-fade-in">
    <h1 class="text-4xl font-bold mb-12">{t('contact.title')}</h1>
    
    <div class="flex flex-col md:flex-row gap-12 md:gap-20">
      <div class="md:w-1/3">
        <h2 class="text-xl font-semibold mb-4">
          {t('contact.letsConnect')}
        </h2>
        
        <p class="mb-6">
          {t('contact.interested')}
        </p>
        
        <div class="space-y-4 mb-8">
          <div class="flex items-center">
            <div class="bg-muted/50 h-10 w-10 rounded-full flex items-center justify-center mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line></svg>
            </div>
            <a 
              href="https://instagram.com" 
              target="_blank" 
              rel="noopener noreferrer"
              class="hover:text-primary transition-colors"
            >
              @portfolioaccount
            </a>
          </div>
          
          <div class="flex items-center">
            <div class="bg-muted/50 h-10 w-10 rounded-full flex items-center justify-center mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect width="4" height="12" x="2" y="9"></rect><circle cx="4" cy="4" r="2"></circle></svg>
            </div>
            <a 
              href="https://linkedin.com" 
              target="_blank" 
              rel="noopener noreferrer"
              class="hover:text-primary transition-colors"
            >
              linkedin.com/in/portfolio
            </a>
          </div>
          
          <div class="flex items-center">
            <div class="bg-muted/50 h-10 w-10 rounded-full flex items-center justify-center mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><circle cx="12" cy="12" r="4"></circle><line x1="21.17" x2="12" y1="8" y2="8"></line><line x1="3.95" x2="8.54" y1="6.06" y2="14"></line><line x1="10.88" x2="15.46" y1="21.94" y2="14"></line></svg>
            </div>
            <a 
              href="https://medium.com/@amaral.felipeaugusto" 
              target="_blank" 
              rel="noopener noreferrer"
              class="hover:text-primary transition-colors"
            >
              medium.com/@amaral.felipeaugusto
            </a>
          </div>
        </div>
        
        <p class="text-sm text-muted-foreground">
          {t('contact.response')}
        </p>
      </div>
      
      <div class="md:w-2/3">
        <div class="bg-card shadow-sm border rounded-xl p-8">
          <ContactForm client:load />
        </div>
      </div>
    </div>
  </div>
</MainLayout>
